{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "lib": [
      "es2016",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@schema/*": [
        "src/graphql/schema/*"
      ],
      "@controllers": [
        "src/db/controllers",
        "src/db/controllers/*"
      ],
      "@appTypes": [
        "src/types.ts"
      ],
      "@db/*": [
        "src/db/*"
      ],
      "@graphql/*": [
        "src/graphql/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}